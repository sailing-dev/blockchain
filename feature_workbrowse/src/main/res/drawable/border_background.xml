<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false"
        android:color = "@color/lb_details_description_body_color">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <stroke android:color="@color/lb_details_description_body_color" android:width="1dp"/>
        </shape>
    </item>
    <item android:state_focused="true"
        android:color="@color/lb_grey" android:width="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <stroke android:color="@color/lb_grey" android:width="1dp"/>
        </shape>
    </item>
</selector>